doctype html
html
    head
        title exquisite tool d
        meta(charset="utf-8")
        // third party libraries
        script
            include scripts/FileSaver.min.js
        script
            include scripts/blitsy.js
        script
            include scripts/utility.js
        script
            include scripts/colorwheel.js
        // styles
        style#base-style
            include styles/base-style.css
        style#editor-style
            include styles/editor-style.css
    body(onload="start()")
        #tools-container
            #drawing-settings-panel.settings-section
                .buttons-row
                    span active drawing
                    button#import-drawing 📂 import image
                hr
                .buttons-row
                    span 📝 name
                    input#drawing-name(type="text")
                .buttons-row
                    input#resize-width(type="number" min="1" max="512")
                    input#resize-height(type="number" min="1" max="512")
                    button#resize-submit 🖼 resize
                .buttons-row
                    button#clone-button 📃 duplicate
                    button#export-drawing 📦 export image
                .buttons-row
                    button#clear-button ⬜ clear
                    button#delete-button ❌ delete
            #brush-settings-panel.settings-section
                .buttons-row
                    span active brush
                    div
                    label
                        | erase
                        input#erase-toggle(type="checkbox")
                #brushes-container
            #color-container.settings-section(hidden)
            .settings-section
                .buttons-row
                    button(title="download a copy of the editor and drawings" onclick="exportEditor()") 📦 export tool
                    button#import-button(title="import drawings from another export") 📂 import tool
        #scene-container
        #data(hidden)
            script#exquisite-tool-d-data(type="application/json")
                include exquisite-tool-d-data.json
        // scripts
        script
            include scripts/main.js
